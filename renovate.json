{
  "extends": ["config:base"],
  "forkProcessing": "enabled",
  "schedule": ["every weekday"],
  "assignees": ["iadjadj"],
  "packageRules": [
    {
      "matchPackagePatterns": ["ArmoniK.+"],
      "groupName": "Dépendances Armonik"
    },
    {
      "matchPackagePatterns": [".+\.nupkg"],
      "groupName": "Dépendances NuGet"
    },
    {
      "matchPackagePatterns": ["action.*"],
      "groupName": "Dépendances Action-Git"
    },
    {
      "matchPackagePatterns": ["*"],
      "groupName": "Dépendances Autres"
    }
    
  ]
}
