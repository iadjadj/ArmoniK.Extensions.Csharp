{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "rangeStrategy": "bump",
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}"
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "^ArmoniK.*"
      ],
      "groupName": "ArmoniK"
    },
    {
      "matchPackagePatterns": [
        "*"
      ],
      "groupName": "{{manager}}"
    }
  ]
}
